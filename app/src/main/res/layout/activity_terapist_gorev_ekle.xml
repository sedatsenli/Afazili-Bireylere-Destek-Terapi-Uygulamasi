<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".terapist_gorev_ekle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:src="@drawable/gorev">

        </ImageView>

        <EditText
            android:id="@+id/editEgzersiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="50px"
            android:inputType="textPersonName"
            android:hint="Egzersiz" />

        <EditText
            android:id="@+id/editTekrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="50px"
            android:inputType="textPersonName"
            android:hint="Tekrar" />

        <EditText
            android:id="@+id/editHastaadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="50px"
            android:inputType="textPersonName"
            android:hint="Hasta Adı" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#FF030B"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="Lütfen Hasta Adını Boşluksuz ve Tam Giriniz!"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/egzersizEkle"
            android:layout_margin="50px"
            android:text="Hasta Görev EKle">

        </Button>

    </LinearLayout>

</ScrollView>