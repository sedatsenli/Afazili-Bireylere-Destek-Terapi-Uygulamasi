<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="40dp"
        android:layout_margin="40dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/tema"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DİKKAT!"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ortam sessizliği,cihaz şarjı,yeterli ışık gibi faktörlere dikkat ediniz."
            android:textSize="20sp"
            android:gravity="center"
            android:padding="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uygulamaya giriş yaparak Kişisel verilerinizin paylaşılmasını kabul ediyorsunuz."
            android:textSize="20sp"
            android:gravity="center"
            android:padding="15dp"/>

        <Button
            android:id="@+id/girisyap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GİRİŞ YAP" />

    </LinearLayout>
</ScrollView>